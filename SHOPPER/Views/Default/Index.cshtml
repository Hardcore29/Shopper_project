@using SHOPPER.Models
@{
    Common d = (Common)HttpContext.Current.Application["all"];
    ViewBag.Title = "SHOPPER - TRANG CHỦ";
}



<div class="site-blocks-cover" style="background-image: url('../asset/images/nam-moi-2023.png');" data-aos="fade">
    <div class="container">
        <div class="row align-items-start align-items-md-center justify-content-end">
            <div class="col-md-5 text-center text-md-left pt-5 pt-md-0">
                <h1 class="mb-2 text-white">Tìm kiếm sản phẩm phù hợp với bạn?</h1>
                <div class="intro-text text-center text-md-left">
                    <p class="mb-4 text-white">Chào mừng bạn đến với SHOPPER</p>
                    <p>
                        <a href='@Url.Action("Index","Product")' class="btn btn-sm btn-primary">Mua ngay</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="site-section site-section-sm site-blocks-1">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-lg-4 d-lg-flex mb-4 mb-lg-0 pl-4" data-aos="fade-up" data-aos-delay="">
                <div class="icon mr-4 align-self-start">
                    <span class="icon-truck"></span>
                </div>
                <div class="text">
                    <h2 class="text-uppercase">Miễn phí vận chuyển</h2>
                    <p>Miễn phí vận chuyển dù bạn ở bất cứ đâu trên đất nước</p>
                </div>
            </div>
            <div class="col-md-6 col-lg-4 d-lg-flex mb-4 mb-lg-0 pl-4" data-aos="fade-up" data-aos-delay="100">
                <div class="icon mr-4 align-self-start">
                    <span class="icon-refresh2"></span>
                </div>
                <div class="text">
                    <h2 class="text-uppercase">Miễn phí đổi trả</h2>
                    <p>Miễn phí đổi trả nếu sản phẩm bị lỗi do nhà sản xuất</p>
                </div>
            </div>
            <div class="col-md-6 col-lg-4 d-lg-flex mb-4 mb-lg-0 pl-4" data-aos="fade-up" data-aos-delay="200">
                <div class="icon mr-4 align-self-start">
                    <span class="icon-help"></span>
                </div>
                <div class="text">
                    <h2 class="text-uppercase">Hỗ trợ khách hàng</h2>
                    <p>Mọi thắc mắc, khiếu nại xin hãy liên hệ đến chúng tôi</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="site-section block-3 site-blocks-2 bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-7 site-section-heading text-center pt-4">
                <h2>SẢN PHẨM MỚI</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="nonloop-block-3 owl-carousel">
                    
                    @{  List<SanPham> l = ViewData["layspmoi"] as List<SanPham>;
                        foreach (SanPham i in l)
                        {
                            <div class="item">
                                <div class="block-4 text-center">
                                    <figure class="block-4-image">
                                        <img src="@i.hinhDD" alt="Image placeholder" class="img-fluid">
                                    </figure>
                                    <div class="block-4-text pl-4 pr-4 pt-4 pb-0">
                                        <h3><a href='@Url.Action("Index","ProductSingle", new {masanpham = i.maSP })' class="font-weight-bold text-black">@i.tenSP</a></h3>
                                        <div class="d-inline-flex">
                                            <p class="text-primary font-weight-bold mb-0 mr-3">@String.Format("{0: #,##0 VNĐ}", (i.giaBan - (i.giaBan * i.giamGia / 100)))</p>
                                            <p class="text-black mb-0"><small><del>@String.Format("{0: #,##0 VNĐ}", d.giaGoc(i.maSP))</del></small></p>
                                        </div>
                                        
                                    </div>
                                    @using (Html.BeginForm("addToCart", "Default", FormMethod.Post))
                                    {
                                        <input name="maspCart" type="hidden" value="@i.maSP" />
                                        <button class="btn btn-sm btn-primary ">Thêm vào giỏ hàng</button>
                                    }
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<div class="site-section block-8">
    <div class="container">
        <div class="row justify-content-center  mb-5">
            <div class="col-md-7 site-section-heading text-center pt-4">
                <h2>Big Sale! Tết 2023</h2>
            </div>
        </div>
        <div class="row align-items-center">
            <div class="col-md-12 col-lg-7 mb-5">
                <a href="#"><img src="~/asset/images/blog_1.jpg" alt="Image placeholder" class="img-fluid rounded"></a>
            </div>
            <div class="col-md-12 col-lg-5 text-center pl-md-5">
                <h2><a href='@Url.Action("OnSale", "Product")'>Sale 20% các sản phẩm mới dịp tết này!!!</a></h2>               
                <p>Tết 2023 đang đến gần, nhanh tay sắm cho mình những trang phục thật đẹp dịp tết này nhé!!</p>
                @Html.ActionLink("Xem ngay", "OnSale", "Product", null, new {@class="btn btn-primary btn-sm" })
            </div>
        </div>
    </div>
</div>
