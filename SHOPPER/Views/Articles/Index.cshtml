@using SHOPPER.Models
@{
    ViewBag.Title = "SHOPPER - Bài viết";
}




<div class="site-section block-3 site-blocks-2 bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-7 site-section-heading text-center pt-4">
                <h2>Bài viết</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="nonloop-block-3 owl-carousel">
                    @{
                            List<BaiViet> l = ViewData["ltcbv"] as List<BaiViet>;
                            foreach (BaiViet i in l)
                            {
                            <div class="item">
                                <div class="block-4 text-center">
                                    <figure class="block-4-image">
                                        <img src="@i.hinhDD" alt="Image placeholder" class="img-fluid">
                                    </figure>
                                    <div class="block-4-text p-4">
                                        <h4><a href='@Url.Action("Index","ArticleDetail", new {mabaiviet = i.maBV })' class="text-black">@i.tenBV</a></h4>
                                        <p class="mb-0">@i.ndTomTat</p>

                                    </div>
                                </div>
                            </div>
                            }
                    }
                </div>
            </div>
        </div>
    </div>
</div>

