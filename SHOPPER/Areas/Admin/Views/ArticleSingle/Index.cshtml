@model SHOPPER.Models.BaiViet
@{
    ViewBag.Title = "SHOPPER - ADMIN - Đăng bài viết";
}
<section class="content-header">
    <h1>
        Đăng bài
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
        <li><a href="#">Bài viết giới thiệu</a></li>
        <li class="active">Đăng bài</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        @using (Html.BeginForm("Index", "ArticleSingle", FormMethod.Post, new { @enctype="multipart/form-data"}))
        {

            <div class="col-md-6">
                <div class="box box-warning">
                    <div class="box-header with-border">
                        <h3 class="box-title">Thông tin chính</h3>
                    </div>
                    <div class="box-body">
                        <div class="form-group">
                            <label>Mã bài viết</label>
                            @Html.TextBoxFor(m => m.maBV, new { @class = "form-control", @placeholder = "Enter..." })
                        </div>
                        <div class="form-group">
                            <label>Tên bài viết</label>
                            @Html.TextBoxFor(m => m.tenBV, new { @class = "form-control", @placeholder = "Enter..." })
                        </div>
                        <!-- textarea -->
                        <div class="form-group">
                            <label>Nội dung tóm tắt</label>
                            @Html.TextAreaFor(m => m.ndTomTat, new { @class = "form-control", @rows = 5, @placeholder = "Enter..." })
                        </div>
                        <div class="form-group col-xs-6">
                            <label>Ngày đăng</label>
                            @Html.TextBoxFor(m => m.ngayDang, new { @class = "form-control", @disabled = "disabled" })
                        </div>
                        <div class="form-group col-xs-6">
                            <label>Tài khoản</label>
                            @Html.TextBoxFor(m => m.taiKhoan, new { @class = "form-control", @disabled = "disabled" })
                        </div>
                        <div class="form-group col-xs-6">
                            <label>Số lần đọc</label>
                            @Html.TextBoxFor(m => m.Solandoc, new { @class = "form-control", @disabled = "disabled" })
                        </div>

                    </div>
                    <!-- /.box-body -->
                </div>
            </div>
            <div class="col-md-6">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Ảnh đại diện</h3>
                    </div>
                    
                    <div class="box-body">
                        <div class="form-group">
                            <img src="@ViewBag.HDDBV" id="ArticleImage" class="img-bordered" width="50%" height="auto" />
                        </div>
                        <div class="form-group">
                            <label for="exampleInputFile">Chọn ảnh: </label>
                            <input type="file" id="uploadImage" class="btn btn-primary" onchange="chooseFile(this)"
                                   accept="image/*" name="hinhDaiDienBV">
                        </div>
                    </div>

                </div>
            </div>
            <div class="col-md-12">
                <div class="box box-info">
                    <div class="box-header">
                        <h3 class="box-title">
                            Nội dung bài viết
                        </h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body pad">
                        @Html.TextAreaFor(m => m.noiDung, new { @id = "ndtt", @rows = "10", @cols = "80", @style = "width: 100%" })
                    </div>
                </div>
            </div>
            <div class="col-md-5">
                <button type="submit" class="btn btn-primary">Đăng bài</button>
            </div>
        }
    </div>

</section>
<script src="https://cdn.tiny.cloud/1/3ouz7mnsfjm7sxdh0oykyxorqwy2fi4jkndfmo0thnqewi6a/tinymce/6/tinymce.min.js" referrerpolicy="origin">

</script>
<script>
    tinymce.init({
        selector: 'textarea#ndtt',
        plugins: 'anchor autolink charmap codesample emoticons image link lists media searchreplace table visualblocks wordcount checklist mediaembed casechange export formatpainter pageembed linkchecker a11ychecker tinymcespellchecker permanentpen powerpaste advtable advcode editimage tinycomments tableofcontents footnotes mergetags autocorrect typography inlinecss',
        toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough | link image media table mergetags | addcomment showcomments | spellcheckdialog a11ycheck typography | align lineheight | checklist numlist bullist indent outdent | emoticons charmap | removeformat',
        tinycomments_mode: 'embedded',
        tinycomments_author: 'Author name',
        mergetags_list: [
            { value: 'First.Name', title: 'First Name' },
            { value: 'Email', title: 'Email' },
        ]
    });
</script>