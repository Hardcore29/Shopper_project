@using SHOPPER.Models
@{
    ViewBag.Title = "OrderDetails";
    List<CtDonHang> l = ViewData["ctdh"] as List<CtDonHang>;
    DonHang d = ViewData["ttdh"] as DonHang;
}

<section class="content-header">
    <h1>
        Thông tin đơn hàng
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>Trang chủ</a></li>
        <li><a href="#">Danh sách đơn hàng</a></li>
        <li class="active">Thông tin đơn hàng</li>
    </ol>
</section>
<section class="content">
    <div class="row ">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-body">
                    <strong>Mã đơn hàng:</strong>
                    <span>@d.soDH</span>
                    <br />
                    <strong>Tên khách hàng:</strong>
                    <span>@d.KhachHang.tenKH</span>
                    <br />
                    <strong>Số điện thoại:</strong>
                    <span>@d.KhachHang.soDT</span>
                    <br />
                    <strong>Địa chỉ:</strong>
                    <span>@d.diaChiGH</span>
                    <br />
                    <strong>Ghi chú:</strong>
                    <span>@d.ghiChu</span>
                    <br />

                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Mã sản phẩm</th>
                                <th>Tên sản phẩm</th>
                                <th>Số lượng</th>
                                <th>Đơn giá</th>
                                <th>Giảm giá</th>
                                <th>Thành tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (CtDonHang i in l)
                            {
                                <tr>
                                    <td>@i.maSP</td>
                                    <td>@i.SanPham.tenSP</td>
                                    <td>@i.soLuong</td>
                                    <td>@String.Format("{0:#,##0 VNĐ}",@i.giaBan)</td>
                                    <td>@String.Format("{0:#,##0 VNĐ}", @i.giamGia)</td>
                                    <td>@String.Format("{0:#,##0 VNĐ}", (@i.giaBan * @i.soLuong - (@i.giaBan * @i.soLuong * @i.giamGia / 100)))</td>
                                </tr>
                            }
                        </tbody>                       
                    </table>
                </div>
            </div>
        </div>

    </div>
</section>
